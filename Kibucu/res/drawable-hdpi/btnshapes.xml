<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#f5f5f5" />
      <stroke
          android:width="1dp"
          android:color="#f5f5f5" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#f5f5f5"
          android:endColor="#f5f5f5"
          android:angle="270" />
      <stroke
          android:width="2dp"
          android:color="#f5f5f5" />
      <corners
          android:radius="20dp" />
      <padding
          android:left="2dp"
          android:top="2dp"
          android:right="2dp"
          android:bottom="2dp" />
    </shape>
  </item>
</selector>